<%= form_for(:song, remote: true, :url => create_song_path) do |form| %>
<div class='form-group'>
  <%= form.label :band do %>Band Name:<% end %>
  <%= form.text_field :band_name, :class => 'form-control', :placeholder => 'Band Name...' %>
</div>
<div class='form-group'>
  <%= form.label :song do %>Song Title:<% end %>
  <%= form.text_field :song_name, :class => 'form-control', :placeholder => 'Song Title...' %>
</div>
<div class='form-group'>
  <%= form.label :genre do %>Genre:<% end %>
  <%= form.collection_select :genre_id, current_user.genres.all, :id, :name, {:class => "form-control", :prompt => "Select a genre..."} %>
</div>
<div class='form-group'>
  <%= form.submit :Submit, :class => "btn btn-default" %>
</div>
<% end %>
